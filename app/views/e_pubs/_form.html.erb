<% if member.epub? %>
  <% if can? :edit, member.id %>
    <% if member.component? %>
      <%= link_to t('.destroy'),
        main_app.component_path(member.component),
        method: :delete,
        title: t('.destroy'),
        data: { confirm: t('.destroy') },
        class: 'btn btn-default' %>
    <% else %>
      <% epub = Sighrax.factory(member.id) %>
      <%= link_to t('.create'),
        main_app.components_path(component: { identifier: HandleService.path(epub.noid), name: epub.title, noid: epub.noid, handle: HandleService.path(epub.noid) }),
        method: :post,
        title: t('.create'),
        data: { confirm: t('.create') },
        class: 'btn btn-default' %>
    <% end %>
  <% else %>
    <% if member.component? %>
      <%= member.component %>
    <% end %>
  <% end %>
<% end %>
