<% products =  Product.all %>
<h1>Products</h1>
<table class="table table-striped" summary="Product List">
  <tr>
    <th>Product <%= link_to(new_product_path) do %>
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New
      <% end %>
    </th>
    <th>Identifier</th>
    <th>Name</th>
    <th>Components</th>
    <th>Lessees</th>
    <th>Policies</th>
  </tr>
  <% products.each do |product| %>
    <tr>
      <td><%= link_to product.id, product_path(product) %></td>
      <td><%= product.identifier %></td>
      <td><%= product.name %></td>
      <td><%= product.components.count() %></td>
      <td><%= product.lessees.count() %></td>
      <td><%= product.policies.count() %></td>
    </tr>
  <% end %>
</table>
