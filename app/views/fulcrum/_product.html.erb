<% product = Product.find_by(identifier: @identifier) %>
<h1>Product</h1>
<div class="col-md-12">
  <table class="table table-striped" summary="Product Detail">
    <tr>
      <th>Key</th>
      <th>Value</th>
    </tr>
    <tr>
      <td>identifier</td>
      <td><%= product.identifier %></td>
    </tr>
    <tr>
      <td>name</td>
      <td><%= product.name %></td>
    </tr>
    <tr>
      <td>purchase</td>
      <td><%= product.purchase %></td>
    </tr>
  </table>
</div>
<h2>Components</h2>
<div class="col-md-12">
  <%= render partial: '/products/components', locals: { product: product, components: product.components } %>
</div>
<h2>Grants</h2>
<div class="col-md-12">
  <%= render partial: '/grants/grants', locals: { resource: product, grants: product.grants } %>
</div>
