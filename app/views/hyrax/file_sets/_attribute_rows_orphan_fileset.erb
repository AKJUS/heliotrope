<div class="tab-content">
  <div role="tabpanel" class="tab-pane fade in active">
    <table class="table <%= dom_class(presenter) %> attributes" <%= presenter.microdata_type_to_html %>>
      <tbody>
        <p><%= presenter.attribute_to_html(:description, render_as: :markdown, label: '') %></p>
        <%= presenter.attribute_to_html(:creator_full_name, label: t('creator')) %>
        <%= presenter.attribute_to_html(:primary_creator_role, label: t('creator_role')) %>
        <%= presenter.attribute_to_html(:contributor, label: t('contributor')) %>
        <%= presenter.attribute_to_html(:display_date, render_as: :markdown, label: t('display_date')) %>
        <%= presenter.attribute_to_html(:section_title, label: t('section_title'), render_as: :markdown) %>
        <%= presenter.attribute_to_html(:keywords) %>
        <%= presenter.attribute_to_html(:content_type, label: t('content_type')) %>
        <%= presenter.attribute_to_html(:language) %>
        <%= presenter.attribute_to_html(:redirect_to) %>
        <%# PERMISSIONS %>
        <%= presenter.attribute_to_html(:embargo_release_date, label: t('embargo_release_date')) %>
        <%= presenter.attribute_to_html(:lease_expiration_date, label: t('lease_expiration_date')) %>
        <%= presenter.attribute_to_html(:rights) %>
        <%= presenter.attribute_to_html(:copyright_holder, render_as: :markdown, label: t('copyright_holder')) %>
        <%= presenter.attribute_to_html(:copyright_status, label: t('copyright_status')) %>
        <%= presenter.attribute_to_html(:rights_granted, label: t('rights_granted')) %>
        <%= presenter.attribute_to_html(:license, render_as: :license, label: t('license')) %>
        <%= presenter.attribute_to_html(:credit_line, render_as: :markdown, label: t('credit_line')) %>
        <%= presenter.attribute_to_html(:holding_contact, render_as: :markdown, label: t('holding_contact')) %>
        <%# TECHNICAL %>
        <%= presenter.attribute_to_html(:file_format, label: t('file_format')) %>
        <%= presenter.attribute_to_html(:file_size, label: t('file_size')) %>
        <%= presenter.attribute_to_html(:width) %>
        <%= presenter.attribute_to_html(:height) %>
        <%= presenter.attribute_to_html(:mime_type, label: t('mime_type')) %>
        <%= presenter.attribute_to_html(:last_modified, label: t('last_modified')) %>
        <%= presenter.attribute_to_html(:original_checksum, label: t('original_checksum')) %>
        <%= presenter.attribute_to_html(:duration) %>
        <%= presenter.attribute_to_html(:sample_rate, label: t('sample_rate')) %>
        <%# STATS %>
        <%= presenter.attribute_to_html(:pageviews) %>
      <tr>
        <th><%= t('citable_link') %></th>
        <td>
          <form>
            <label for="permalink" style="display: none;"><%= t('citable_link') %></label>
            <input type="text" class="form-control" id="permalink" value="<%= presenter.citable_link %>" readonly="readonly" onclick="this.select(); document.execCommand('copy');" />
          </form>
        </td>
      </tr>
      </tbody>
    </table>
  </div>
</div>
