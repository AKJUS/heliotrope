<% if Hyrax.config.display_media_download_link? && file_set.allow_download? %>
    <%= link_to hyrax.download_path(file_set), target: "_new", title: "Download the document" do %>
      <%= image_tag "default.png", alt: "No preview available", class: "img-responsive" %>
    <% end %>
<% else %>
    <%= image_tag "default.png", alt: "No preview available", class: "img-responsive" %>
<% end %>
