<% if file_set.use_glyphicon? %>
  <% if Hyrax.config.display_media_download_link? && file_set.allow_download? %>
    <%= link_to hyrax.download_path(file_set), target: "_new", title: "Download this PDF" do %>
      <span class="<%= file_set.glyphicon_type %> asset-page-glyphicon"
            aria-hidden="true"
            alt='Download the PDF of "<%= file_set.page_title.delete('"') %>"'>
      </span>
    <% end %>
  <% else %>
    <span class="<%= file_set.glyphicon_type %> asset-page-glyphicon"
          aria-hidden="true"
          alt="">
    </span>
  <% end %>
<% else %>
  <% if Hyrax.config.display_media_download_link? && file_set.allow_download? %>
    <%= link_to hyrax.download_path(file_set), target: "_new", title: "Download this PDF" do %>
      <%= image_tag thumbnail_url(file_set),
                    class: "img-responsive asset-page-image",
                    alt: 'Download the PDF of "' +  file_set.page_title.delete('"') + '"' %>
    <% end %>
  <% else %>
    <%= image_tag thumbnail_url(file_set),
                  class: "img-responsive asset-page-image",
                  alt: 'Thumbnail of "' + file_set.page_title.delete('"') + '"' %>
  <% end %>
<% end %>
