<%= render 'shared/skip_links' %>
<header id="banner" role="banner">
  <hgroup>
    <% if press_subdomain.present? %>
      <% if %w[leverpress barpublishing mps].include? press_subdomain %>
        <%= render 'shared/brand_press_bar_custom' %>
      <% else %>
        <%= render 'shared/brand_press_bar' %>
      <% end %>
    <% else %>
      <%= render 'shared/brand_bar' %>
    <% end %>
  </hgroup>
</header>
<% if defined?(@press.subdomain) && controller_name == "press_catalog" %>
  <% unless @press.aboutware? %>
    <%= render 'shared/brand_press_jumbotron' %>
  <% end %>
<% end %>
<%= render 'shared/brand_press_banner' if show_banner?(current_actor, press_subdomain) %>
