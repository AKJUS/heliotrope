<%= render 'shared/skip_links' %>
<header id="banner" role="banner">
  <hgroup>
    <% if press_presenter.present? %>
      <% if %w[leverpress barpublishing mps].include? press_presenter.subdomain %>
        <%= render 'shared/brand_press_bar_custom' %>
      <% else %>
        <%= render 'shared/brand_press_bar' %>
      <% end %>
    <% else %>
      <%= render 'shared/brand_bar' %>
    <% end %>
  </hgroup>
</header>
<% if press_presenter.present? && controller_name == "press_catalog" %>
  <% unless press_presenter.press.aboutware? %>
    <%= render 'shared/brand_press_jumbotron' %>
  <% end %>
<% end %>
<%= render 'shared/brand_press_banner' if press_presenter.present? && show_banner?(current_actor, press_presenter.subdomain) %>
<%= render 'shared/eula_press_banner' if press_presenter.present? && show_eula?(press_presenter.subdomain) %>
