<nav id="brand-bar" class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <!-- brand and toggle grouped together -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#brand-bar-nav" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <% if defined?(@press.name) %>
        <a class="navbar-brand" href="<%= main_app.press_catalog_path(@press) %>">         
            <%= image_tag "LeverLogo.svg", class: 'navbar-brand-logo', alt: 'Lever Press', height: '70', width: 'auto' %><%= @press.name %>
        </a>
      <% elsif defined?(@presenter.press) %>
        <a class="navbar-brand" href="<%= main_app.press_catalog_path(@presenter.press_obj) %>"><%= @presenter.press %></a>
      <% elsif defined?(@presenter.parent.press) %>
        <a class="navbar-brand" href="<%= main_app.press_catalog_path(@presenter.parent.press_obj) %>"><%= @presenter.parent.press %></a>
      <% else %>
        <a class="navbar-brand" href="#">University Press</a>
      <% end %>
    </div>

      <%= render 'shared/site_search' %>

    <div class="collapse navbar-collapse" id="brand-bar-nav">
      <div class="navbar-right">
        <% if navigation_block(press_subdomain).present? %>
          <%= navigation_block(press_subdomain).html_safe %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
