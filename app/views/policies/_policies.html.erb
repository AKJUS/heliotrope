<b>
  <div class="col-md-10">
    <div class="col-md-1">ID</div>
    <div class="col-md-3">Agent</div>
    <div class="col-md-4">Credential</div>
    <div class="col-md-3">Resource</div>
    <div class="col-md-1">Zone</div>
  </div>
  <div class="col-md-2"><%= link_to 'New Policy', new_policy_path %></div>
  <hr/>
</b>
<% policies.each do |policy| %>
  <div class="col-md-10">
    <div class="col-md-1"><%= link_to policy.id, policy %></div>
    <div class="col-md-3"><%= link_to policy.agent.identifier, policy.agent %></div>
    <div class="col-md-4"><%= policy.credential_token %></div>
    <div class="col-md-3"><%= link_to policy.resource.identifier, policy.resource %></div>
    <div class="col-md-1"><%= policy.zone_id %></div>
  </div>
  <div class="col-md-2">
    <%= link_to(policy_path(policy), method: :delete, class: "btn btn-default", data: { confirm: 'Are you sure?' }) do %>
      <span class="glyphicon glyphicon-minus" aria-hidden="true"></span> Destroy
    <% end %>
  </div>
<% end %>

