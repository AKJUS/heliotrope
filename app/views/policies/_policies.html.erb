  <div class="col-md-2">
    <div class="col-md-4"><%= link_to 'Show', policy %></div>
    <div class="col-md-4"><%= link_to_if policy.update?, 'Edit', edit_policy_path(policy) %></div>
    <div class="col-md-4"><%= link_to_if policy.destroy?, 'Destroy', policy, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  </div>
