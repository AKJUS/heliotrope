<% policies.each do |policy| %>
  <div class="col-md-10">
    <div class="col-md-1"><%= link_to policy.id, policy %></div>
    <div class="col-md-3"><%= link_to policy.agent.identifier, policy.agent %></div>
    <div class="col-md-3"><%= policy.credential_token %></div>
    <div class="col-md-3"><%= link_to policy.resource.identifier, policy.resource %></div>
    <div class="col-md-2"><%= policy.zone_id %></div>
  </div>
