<%
  columns = 0
  columns = @report[:items][0].length if @report[:items].present?
%>

<h1><%= @title %></h1>

<table class="table">
  <% @report[:header].each do |k, v| %>
    <tr>
      <td><b><%= k %></b></td>
      <td><%= v %></td>
      <% 1.upto(columns - 2).each do |x| %>
        <td>&nbsp;</td>
      <% end %>
    </tr>
  <% end %>
  <tr>
    <!--  Blank Line-->
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <% 1.upto(columns - 2).each do |x| %>
      <td>&nbsp;</td>
    <% end %>
  </tr>
</table>
<table class="table">
  <% if columns.zero? %>
    <tr>
      <td><b>Report is empty</b></td>
      <td>&nbsp;</td>
    </tr>
  <% else %>
    <tr>
      <% @report[:items][0].each do |k, _v| %>
        <td><b><%= k %></b></td>
      <% end %>
    </tr>
    <% @report[:items].each do |item| %>
      <tr>
        <% item.each do |_k, v| %>
          <td><%= v %></td>
        <% end %>
      </tr>
    <% end %>
  <% end %>
</table>
