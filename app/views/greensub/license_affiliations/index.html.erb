<div id="maincontent">
  <% if @license.present? %>
    <h1>License Affiliations of <%= link_to @license.identifier, greensub_license_path(@license) %> License</h1>
    <form name="filter" method="get" action="<%= greensub_license_affiliations_path(@license) %>">
  <% else %>
    <h1>License Affiliations</h1>
    <form name="filter" method="get" action="<%= greensub_license_affiliations_path %>">
  <% end %>
  <b>
    <div class="col-md-12"><hr/></div>
    <div class="col-md-1">ID</div>
    <div class="col-md-5">License</div>
    <div class="col-md-4">Affiliation</div>
    <div class="col-md-2"><%= link_to 'New License Association', new_greensub_license_affiliation_path %></div>
    <% size = 12 %>
    <div class="col-md-1"><button name="submit" type="submit" value="filter">Filter</button></div>
    <div class="col-md-5"><%= select(nil, "license_id_like", Greensub::License.all.collect { |license| [license.type, license.id] }, include_blank: true, selected: params[:license_id_like]) %></div>
    <div class="col-md-4"><%= select(nil, "affiliation_like", Greensub::LicenseAffiliation.affiliations.collect { |affiliation| [affiliation, affiliation] }, include_blank: true, selected: params[:affiliation_like]) %></div>
    <div class="col-md-2">&nbsp;</div>
    <div class="col-md-12"><hr/></div>
  </b>
  </form>

  <% @license_affiliations.each do |license_affiliation| %>
    <div class="col-md-1"><%= license_affiliation.id %></div>
    <div class="col-md-5"><%= link_to license_affiliation.license.type, greensub_license_path(license_affiliation.license) %></div>
    <div class="col-md-4"><%= license_affiliation.affiliation %></div>
    <div class="col-md-2">
      <div class="col-md-4"><%= link_to 'Show', greensub_license_affiliation_path(license_affiliation) %></div>
      <div class="col-md-4"><%= link_to 'Edit', edit_greensub_license_affiliation_path(license_affiliation) %></div>
      <div class="col-md-4"><%= link_to 'Destroy', greensub_license_affiliation_path(license_affiliation), method: :delete, data: { confirm: 'Are you sure?' } %></div>
    </div>
  <% end %>

  <div class="col-md-12">&nbsp;<%= paginate @license_affiliations %></div>
</div>
