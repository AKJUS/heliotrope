<p id="notice"><%= notice %></p>
<div id="maincontent">
  <h1>Product</h1>
  <div class="row">
    <div class="col-md-2"><em>ID</em></div>
    <div class="col-md-10">&nbsp;<%= @product.id %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Identifier</em></div>
    <div class="col-md-10">&nbsp;<%= @product.identifier %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Name</em></div>
    <div class="col-md-10">&nbsp;<%= @product.name %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Purchase</em></div>
    <div class="col-md-10">&nbsp;<%= @product.purchase %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Needs KBART</em></div>
    <div class="col-md-10">&nbsp;<%= @product.needs_kbart %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Group Key</em></div>
    <div class="col-md-10">&nbsp;<%= @product.group_key %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Components</em></div>
    <div class="col-md-10">&nbsp;<%= link_to @product.components.count, greensub_product_components_path(@product) %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Individuals</em></div>
    <div class="col-md-10">&nbsp;<%= link_to @product.individuals.count, greensub_product_individuals_path(@product) %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Institutions</em></div>
    <div class="col-md-10">&nbsp;<%= link_to @product.institutions.count, greensub_product_institutions_path(@product) %></div>
  </div>
  <div class="row">
    <div class="col-md-2"><em>Licenses</em></div>
    <div class="col-md-10">&nbsp;<%= link_to @product.licenses.count, greensub_product_licenses_path(@product) %></div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <%= link_to_if @product.update?, 'Edit', edit_greensub_product_path(@product) %>
      <span> | </span>
      <%= link_to 'Back', greensub_products_path %>
      <span> | </span>
      <%= link_to_if @product.destroy?, 'Destroy', greensub_product_path(@product), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>
