<p id="notice"><%= notice %></p>
<div id="maincontent">
  <div class="row">
    <div class="col-md-12"><h1>Lessees</h1></div>
    <div class="col-md-12">
      <% @lessees.each do |lessee| %>
        <div class="col-md-1"><%= lessee.id %></div>
        <div class="col-md-5">
          <%= lessee.identifier %>
          <% if lessee.institution? %>
            <%= lessee.institution.name %>
          <% end %>
        </div>
        <div class="col-md-6">
          <div class="col-md-4"><%= link_to 'Show', lessee %></div>
          <div class="col-md-4"><%= link_to_if lessee.update?, 'Edit', edit_lessee_path(lessee) %></div>
          <div class="col-md-4"><%= link_to_if lessee.destroy?, 'Destroy', lessee, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </div>
      <% end %>
    </div>
    <div class="col-md-12"><br/></div>
    <div class="col-md-6"><%= link_to 'New Lessee', new_lessee_path %></div>
    <div class="col-md-12"><br/></div>
  </div>
</div>