<div class="row">
  <% groupings.each do |grouping| %>
    <div class="col-md-1"></div>
    <div class="col-md-5"><%= grouping.identifier %></div>
    <div class="col-md-6">
      <%= link_to(lessee_grouping_path(lessee, grouping), method: :delete, class: "btn btn-default") do %>
        <span class="glyphicon glyphicon-minus" aria-hidden="true"></span> Remove
      <% end %>
    </div>
  <% end %>
  <% if lessee.not_groupings.present? %>
    <%= form_tag(lessee_groupings_path(lessee), method: :post) do %>
      <div class="col-md-1"></div>
      <div class="col-md-5"><%= select_tag "id", options_from_collection_for_select(lessee.not_groupings, "id", "identifier") %></div>
      <div class="col-md-6">
        <%= button_tag(type: 'submit', class: 'btn btn-default') do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
